@model GoldLaminates.Areas.Blog.Models.BlogCategoryTb
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Category</h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, null))
{
    
      
       @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <label class="control-label col-md-2"> Category Name :</label>
    @*@Html.LabelFor(model => model.ArticleTitle, htmlAttributes: new { @class = "control-label col-md-2" })*@
    <div class="col-md-10">

        @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
        @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "text-danger" })

    </div>
</div>

<div class="form-group">
    <label class="control-label col-md-2">Select Parent :</label>
    <div class="col-md-10">
      
        @Html.DropDownListFor(r => r.PId, (IEnumerable<SelectListItem>)ViewBag.Parent,"--Select Parent--", new { @class = "form-control ", id = "PageArray" })
        <span style="color:red;font-size:small" id="PageArrayEror"></span>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>


}