@model GoldLaminates.Areas.Blog.Models.BlogCategoryTb

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Blog Category</h2>




@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, null))
{
    @Html.HiddenFor(m=>m.CatId)
    <div class="form-group">
        <label class="control-label col-md-2"> Category Name :</label>
        @*@Html.LabelFor(model => model.ArticleTitle, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">

            @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
            <span style="color:red;font-size:small" id="ArticleTitleEror"></span>

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Select Parent :</label>
        <div class="col-md-10">

            @Html.DropDownListFor(r => r.PId, (IEnumerable<SelectListItem>)ViewBag.Parent, "--Select Parent--", new { @class = "form-control ", id = "PageArray" })
            <span style="color:red;font-size:small" id="PageArrayEror"></span>
        </div>
    </div>
    @*<div class="form-group">
            <label class="control-label col-md-2">Select Page :</label>
            <div class="col-md-10">

                @Html.DropDownListFor(r => r.PId, (IEnumerable<SelectListItem>)ViewBag.PageList, new { @class = "form-control multiselect", id = "PageArray", multiple = "multiple", Name = "PageArray[]" })
                <span style="color:red;font-size:small" id="PageArrayEror"></span>
            </div>
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>


}